<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mojiayi.action.dynamic.data.permission.dao.LogiReviewMapper">
    <select id="selectByOrderId" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ord_logi_review
        where order_id = #{orderId,jdbcType=VARCHAR} and status=1 and enabled=1
    </select>

    <select id="selectAvailableRecord" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ord_logi_review
        where status=1 and enabled=1
        order by create_time desc
    </select>
</mapper>